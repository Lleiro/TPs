<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciceActivityQCM">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNomExoQCM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="textView"
            android:gravity="center"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tvDifficulteQCM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="difficulte"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginBottom="40dp"/>

        <TextView
            android:id="@+id/tvQuestionQCM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginBottom="100dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnReponse1QCM"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:text="Reponse1"
                android:layout_margin="20dp"/>

            <Button
                android:id="@+id/btnReponse2QCM"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:text="Reponse1"
                android:layout_margin="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnReponse3QCM"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:text="Reponse3"
                android:layout_margin="20dp"/>

            <Button
                android:id="@+id/btnReponse4QCM"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:text="Reponse4"
                android:layout_margin="20dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnQuitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quitter"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:onClick="retourMenuMatiere"/>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>